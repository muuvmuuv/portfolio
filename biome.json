{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.js",
			"**/*.mjs",
			"**/*.ts",
			"**/*.vue",
			"!**/*generated*",
			"!.git",
			"!.cache",
			"!node_modules",
			"!dist",
			"!tmp"
		]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
