{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "Dom"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
