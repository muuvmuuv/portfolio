# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 94

[*.md]
trim_trailing_whitespace = false
indent_style = space

[*.{json,yaml,yml}]
indent_style = space
